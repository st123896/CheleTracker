<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000"> <!-- Ripple effect -->

    <item>
        <shape android:shape="rectangle">
            <!-- Background fill color -->
            <solid android:color="#6200EE" /> <!-- Purple 500 -->

            <!-- Rounded corners -->
            <corners android:radius="12dp" />

            <!-- Optional stroke -->
            <stroke
                android:width="1dp"
                android:color="#3700B3" /> <!-- Darker purple -->
        </shape>
    </item>
</ripple>
